<?xml version="1.0" encoding="utf-8"?>
<manifest package="me.chunyu.spike.wcl_activity_launchmode_demo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".TestAActivity"
            />

        <activity android:name=".TestBActivity"
                  android:taskAffinity="me.chunyu.clwang.stack"
                  android:launchMode="singleTask"/>

        <activity
            android:name=".TestCActivity"/>

        <activity
            android:name=".TestDActivity"/>
    </application>

</manifest>
